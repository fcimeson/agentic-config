{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "tui": {
     // "copy_on_select": false
   },
   "keybinds": {
    "session_child_cycle": "ctrl+right", 
    "session_child_cycle_reverse": "ctrl+left" 
  },
  "tools": {
    "index_analyze": false,
    "index_analyzeImage": false,
    "index_edit": false,
    "index_editImage": false,
    "index_gemini": false,
    "index_generate": false,
    "index_generateImage": false
  },
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    }
  },
  "mcp": {
    "serena": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx", "--from", "git+https://github.com/oraios/serena",
        "serena", "start-mcp-server",
        "--context", "claude-code",
        "--mode", "editing",
        "--mode", "interactive",
        "--mode", "planning"
      ],
    }
    // "gitea": {
    //   "type": "local",
    //   "enabled": false,
    //   "command": [
    //     "gitea-mcp",
    //     "-t", "stdio",
    //     "--host", "http://databank:3000",
    //     "--token", "${GITEA_ACCESS_TOKEN}"
    //   ],
    //   "environment": {
    //     "GITEA_ACCESS_TOKEN": "${GITEA_ACCESS_TOKEN}"
    //   }
    // }
  }
}

